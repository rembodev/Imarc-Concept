---
import BaseHead from "../components/BaseHead.astro";
import "../styles/global.css";
import "../styles/cuencas-vivas-theme.css"; // Branding specific styles

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
    <BaseHead
        title={`Cuencas Vivas | ${title}`}
        description="Proyecto Cuencas Vivas - Adaptación Innovadora en Ecosistemas Vulnerables"
    />
    <body class="font-outfit text-gray-800 bg-gray-50 antialiased">
        <!-- Cuencas Vivas Header -->
        <nav class="absolute top-0 w-full z-50 mt-4 px-4">
            <div
                class="max-w-5xl mx-auto bg-white/90 backdrop-blur-md rounded-xl shadow-lg border border-white/20 px-6 py-3 flex justify-between items-center"
            >
                <!-- Logo izquierda -->
                <a href="/" class="flex items-center">
                    <img
                        src="/assets/img/lg-simple-imar.png"
                        alt="IMAR Logo"
                        class="h-8 w-auto opacity-80 hover:opacity-100 transition-opacity"
                    />
                </a>

                <!-- Título centrado -->
                <a
                    href="/proyectos/cuencas-vivas"
                    class="absolute left-1/2 transform -translate-x-1/2"
                >
                    <h1
                        class="text-xl font-bold text-green-700 whitespace-nowrap"
                    >
                        Proyecto Cuencas Vivas
                    </h1>
                </a>

                <!-- Botón contacto derecha -->
                <a
                    href="/contacto"
                    class="bg-green-600 text-white text-sm px-4 py-2 rounded-lg hover:bg-green-700 transition-colors shadow-md"
                >
                    Contacto
                </a>
            </div>
        </nav>

        <main>
            <slot />
        </main>

        <!-- Footer Completo -->
        <footer
            class="bg-gradient-to-r from-green-800 to-green-600 text-white py-12"
        >
            <div class="max-w-6xl mx-auto px-6">
                <div
                    class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8"
                >
                    <!-- Columna 1: Menú y Proyectos -->
                    <div class="space-y-6">
                        <div>
                            <h4
                                class="font-bold text-white mb-4 uppercase tracking-wide text-sm"
                                style="color:white ;"
                            >
                                Menú
                            </h4>
                            <ul class="space-y-2 text-green-100 text-sm">
                                <li>
                                    <a
                                        href="/"
                                        class="hover:text-white transition-colors flex items-center gap-1"
                                        ><span class="text-green-300">›</span> Home</a
                                    >
                                </li>
                                <li>
                                    <a
                                        href="#"
                                        class="hover:text-white transition-colors flex items-center gap-1"
                                        ><span class="text-green-300">›</span> Política
                                        de privacidad</a
                                    >
                                </li>
                            </ul>
                        </div>
                        <div>
                            <h4
                                class="font-bold text-white mb-4 uppercase tracking-wide text-sm"
                                style="color:white ;"
                            >
                                Proyectos
                            </h4>
                            <ul class="space-y-2 text-green-100 text-sm">
                                <li>
                                    <a
                                        href="/proyectos/cuencas-vivas"
                                        class="hover:text-white transition-colors flex items-center gap-1"
                                        ><span class="text-green-300">›</span> Cuencas
                                        Vivas</a
                                    >
                                </li>
                            </ul>
                        </div>
                    </div>

                    <!-- Columna 2: Áreas Temáticas -->
                    <div>
                        <h4
                            class="font-bold text-white mb-4 uppercase tracking-wide text-sm"
                            style="color:white ;"
                        >
                            Áreas Temáticas
                        </h4>
                        <ul class="space-y-2 text-green-100 text-sm">
                            <li>
                                <a
                                    href="/areas-tematicas/gestion-agua"
                                    class="hover:text-white transition-colors flex items-center gap-1"
                                    ><span class="text-green-300">›</span> Gestión
                                    del Agua</a
                                >
                            </li>
                            <li>
                                <a
                                    href="/areas-tematicas/gestion-productiva"
                                    class="hover:text-white transition-colors flex items-center gap-1"
                                    ><span class="text-green-300">›</span> Gestión
                                    Productiva del Agua</a
                                >
                            </li>
                            <li>
                                <a
                                    href="/areas-tematicas/gestion-ambiental"
                                    class="hover:text-white transition-colors flex items-center gap-1"
                                    ><span class="text-green-300">›</span> Gestión
                                    Ambiental</a
                                >
                            </li>
                            <li>
                                <a
                                    href="/areas-tematicas/desarrollo-economico"
                                    class="hover:text-white transition-colors flex items-center gap-1"
                                    ><span class="text-green-300">›</span> Desarrollo
                                    Económico Local</a
                                >
                            </li>
                        </ul>
                    </div>

                    <!-- Columna 3: Contáctanos -->
                    <div>
                        <h4
                            class="font-bold text-white mb-4 uppercase tracking-wide text-sm"
                            style="color:white ;"
                        >
                            Contáctanos
                        </h4>
                        <ul class="space-y-2 text-green-100 text-sm">
                            <li class="flex items-center gap-2">
                                <svg
                                    class="w-4 h-4 text-green-300"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                    ><path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                                    ></path></svg
                                >
                                944-673-568
                            </li>
                            <li class="flex items-center gap-2">
                                <svg
                                    class="w-4 h-4 text-green-300"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                    ><path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                                    ></path></svg
                                >
                                (074) 203-488
                            </li>
                            <li class="flex items-center gap-2">
                                <svg
                                    class="w-4 h-4 text-green-300"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                    ><path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
